{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@karlo/modules-shared-constants": [
        "modules/shared/constants/src/index.ts"
      ],
      "@karlo/modules-shared-hooks": ["modules/shared/hooks/src/index.ts"],
      "@karlo/modules-shared-utils": ["modules/shared/utils/src/index.ts"],
      "@karlo/modules/editor": ["modules/editor/src/index.ts"],
      "@karlo/modules/feed": ["modules/feed/src/index.ts"],
      "@karlo/modules/listen": ["modules/listen/src/index.ts"],
      "@karlo/modules/login": ["modules/login/src/index.ts"],
      "@karlo/modules/planner": ["modules/planner/src/index.ts"],
      "@karlo/modules/reader": ["modules/reader/src/index.ts"],
      "@karlo/modules/shared/store": ["modules/shared/store/src/index.ts"],
      "@karlo/modules/shared/ui": ["modules/shared/ui/src/index.ts"],
      "@karlo/modules/shop": ["modules/shop/src/index.ts"],
      "@karlo/modules/watch": ["modules/watch/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
