{
  "name": "karlo",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/karlo",
        "index": "src/index.html",
        "baseHref": "/",
        "main": "src/main.tsx",
        "tsConfig": "tsconfig.app.json",
        "assets": ["src/favicon.ico", "src/assets"],
        "styles": [],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "webpack.config.js",
        "postcssConfig": "postcss.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "src/environments/environment.ts",
              "with": "src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "karlo:build",
        "hmr": true,
        "proxyConfig": "./proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "karlo:build:development"
        },
        "production": {
          "buildTarget": "karlo:build:production",
          "hmr": false
        }
      }
    },
    "serveWithApi": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run karlo:serve",
          "nx run payment-service:serve --inspect",
          "nx run auth-service-auth-service:serve --inspect",
          "nx run gateway-service-gateway-service:serve --inspect",
          "nx run feeds-service:serve --inspect"
        ]
      }
    },
    "serveApi": {
      "defaultConfiguration": "development",
      "executor": "nx-pm2-plugin:pm2-executor",
      "options": {
        "command": "nx run payment-service:serve:development",
        "name": "payment-service"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "./src/**/*.{ts,tsx,js,jsx}",
          "./functions/**/*.ts"
        ]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "karlo:build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectName}"],
      "options": {
        "jestConfig": "jest.config.app.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-functions": {
      "command": "npx netlify dev"
    },
    "deploy-functions": {
      "dependsOn": ["lint"],
      "command": "npx netlify deploy",
      "configurations": {
        "production": {
          "command": "npx netlify deploy --prod"
        }
      }
    }
  },
  "sourceRoot": "./src",
  "projectType": "application",
  "tags": []
}
